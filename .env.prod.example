# k8s 배포용 시크릿 환경변수
# 복사해서 .env 로 사용
# 사용: ./scripts/deploy.sh

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# OAuth - Naver
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=
NAVER_REDIRECT_URI=

# NCP Clova Studio
NCP_CLOVASTUDIO_API_KEY=

# Worker (STT) - 동적 키 할당을 위해 5개 키 설정
CLOVA_STT_SECRET_0=
CLOVA_STT_SECRET_1=
CLOVA_STT_SECRET_2=
CLOVA_STT_SECRET_3=
CLOVA_STT_SECRET_4=
CLOVA_STT_KEY_COUNT=5
BACKEND_API_KEY=

# DB URI / Password (필수)
NEO4J_URI=
NEO4J_PASSWORD=
DATABASE_URL=

# Livekit
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=

# TTS
TTS_SERVER_URL=

# JWT
JWT_SECRET=

# Observability
GRAFANA_ADMIN_PASSWORD=

# Cloudflare Tunnel (Grafana 접근용)
CLOUDFLARE_TUNNEL_TOKEN=

# App
APP_ENV=production
DEBUG=false
VITE_DEV_MODE=false

# Langfuse (LLM Observability)
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_BASE_URL=https://cloud.langfuse.com
LANGFUSE_TRACING_ENABLED=true

# Team limits
MAX_TEAM_MEMBERS=7
VITE_MAX_TEAM_MEMBERS=7
