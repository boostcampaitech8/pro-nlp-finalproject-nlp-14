# k8s 배포용 시크릿 환경변수
# 복사해서 .env 로 사용
# 사용: ./scripts/deploy.sh

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# OAuth - Naver
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=
NAVER_REDIRECT_URI=

# NCP Clova Studio
NCP_CLOVASTUDIO_API_KEY=

# Clova Studio Router
CLOVA_ROUTER_ID=
CLOVA_ROUTER_VERSION=

# Worker (STT) - 동적 키 할당을 위해 5개 키 설정
CLOVA_STT_SECRET_0=
CLOVA_STT_SECRET_1=
CLOVA_STT_SECRET_2=
CLOVA_STT_SECRET_3=
CLOVA_STT_SECRET_4=
CLOVA_STT_KEY_COUNT=5
BACKEND_API_KEY=

# DB URI / Password (필수)
NEO4J_URI=
NEO4J_PASSWORD=
DATABASE_URL=

# Livekit
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=

# TTS
TTS_SERVER_URL=

# JWT
JWT_SECRET=

# Observability
GRAFANA_ADMIN_PASSWORD=

# Cloudflare Tunnel (Grafana 접근용)
CLOUDFLARE_TUNNEL_TOKEN=

# Load Balancer
LB_EXTERNAL_IP=   # LB 공인 IP (LiveKit WebRTC 미디어용)

# K3s HA Cluster (3 server, taint 제거)
NODE1=        # 노드1 사설IP (초기 server, LiveKit 고정)
NODE2=        # 노드2 사설IP (server, --server https://NODE1:6443 으로 조인)
NODE3=        # 노드3 사설IP (server, --server https://NODE1:6443 으로 조인)
K3S_TOKEN=    # openssl rand -hex 32

# App
APP_ENV=production
DEBUG=false
VITE_DEV_MODE=false

# Langfuse (LLM Observability)
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_ENABLED=true

# Team limits
MAX_TEAM_MEMBERS=7
VITE_MAX_TEAM_MEMBERS=7
