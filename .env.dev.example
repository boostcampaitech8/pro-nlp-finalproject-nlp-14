# k8s 로컬 개발 환경용 시크릿 환경변수
# 복사: cp .env.dev.example .env
# 필수 환경변수 템플릿. 기타 커스텀 설정은 .env 파일에만 추가하세요.

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_REDIRECT_URI=
GOOGLE_CLIENT_SECRET=

# OAuth - Naver
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=
NAVER_REDIRECT_URI=

# NCP Clova Studio (AI 기능용)
NCP_CLOVASTUDIO_API_KEY=

# Worker (STT 처리용)
CLOVA_STT_SECRET=
BACKEND_API_KEY=

# DB URI / Password (필수)
NEO4J_URI=
NEO4J_PASSWORD=
DATABASE_URL=

# Livekit (make dev 전용)
LIVEKIT_API_KEY=mit-api-key
LIVEKIT_API_SECRET=secret-change-in-production-min-32-chars
LIVEKIT_WS_URL=ws://localhost:7880
LIVEKIT_EXTERNAL_URL=ws://localhost:7880

# TTS
TTS_SERVER_URL=

# APP
APP_ENV=development
VITE_DEV_MODE=false
DEBUG=false

# Langfuse (LLM Observability)
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_ENABLED=true
